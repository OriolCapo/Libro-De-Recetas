<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_recepta"
        android:layout_gravity="left"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_recepta"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="10dp"
        android:text="sasasasss"
        android:textColor="#ffffff"
        android:background="@color/black_transparent"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView_recepta"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_alignEnd="@+id/imageView_recepta" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_star_white_18dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView_recepta" />

</RelativeLayout>